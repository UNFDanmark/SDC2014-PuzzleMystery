<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ff0faaac" android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Success !"
            android:id="@+id/SuccessText" android:layout_gravity="center_horizontal" android:textSize="75dp"
            android:layout_marginTop="160dp" android:textColor="#ff38ff11"/>
    <Button
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/ContinueButton" android:layout_gravity="center_horizontal" android:layout_marginTop="30dp"
            android:layout_weight="0.07" android:textColor="#ff3eff18" android:background="#ff0b17ff"
            android:textSize="25dp" android:textStyle="bold"/>
</LinearLayout>